<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="xyz.dolphcode.tasktitans">

    <supports-screens
        android:largeScreens="true"
        android:normalScreens="true"
        android:smallScreens="true"
        android:xlargeScreens="true" />

    <application
        android:name=".TaskTitansApp"
        android:allowBackup="true"
        android:icon="@drawable/tasktitanslogo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name=".GuildInfoActivity"></activity>
        <activity android:name=".TaskGroupPanelActivity" />
        <activity android:name=".TaskGroupPageActivity" />
        <activity android:name=".FrequencyPickerActivity" />
        <activity android:name=".GuildCreateActivity" />
        <activity android:name=".GroupTaskActivity" />
        <activity android:name=".RepeatTaskActivity" />
        <activity android:name=".TaskCreationActivity" />
        <activity android:name=".TasksActivity" />
        <activity android:name=".DetailsActivity" />
        <activity android:name=".AppearanceActivity" />
        <activity android:name=".GuildActivity" />
        <activity android:name=".GuildSearchActivity" />
        <activity android:name=".ShopActivity" />
        <activity android:name=".StatsActivity" />
        <activity android:name=".GameActivity" />
        <activity android:name=".LoginActivity" />
        <activity android:name=".SignupActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>